<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Eat More Burgers, Now!! </h1>
      <h2>Devour Me, Now!! </h2>
    </div>
    <div class="col-xs-6">
      <div class="row">
        {{#each burger_data}}
          {{#unless this.devoured}}
        <div class="col-xs-9 md-1">
          <pre> {{this.id}}. {{this.burger_name}}</pre>
        </div>
      <div class="col-xs-9 md-1">
          <form method="POST" action="/burgers/update?_method=POST"
            class="button-size">
            <input type="hidden" id="devour" name="burger_id" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-success">Devour, Yum!</button>
          </form>
      </div>
        {{/unless}}
      {{/each}}
      </div>
    </div>
    <!--database addition-->
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-6 text-center">
          <p>What type of burger do you want to eat?!!!</p>
            <form action="/burgers/create" method="POST">
              <input type="text" name="burger_name" class="form-control"
              value="" id="burger_text">
              <button type="submit" class="btn btn-danger">Eat Me, Um!</button>
            </form>
        </div>
      </div>
    </div>

    <div class="col-xs-6 text-center md-1" id="task">
      {{#each burger_data}}
        {{#if this.devoured}}
          <input class="form-control" type="text" placeholder=
            "{{this.id}}. {{this.burger_name}}" readonly>
              {{/if}}
            {{/each}}
            <br>
    </div>
  </div>
</div>
